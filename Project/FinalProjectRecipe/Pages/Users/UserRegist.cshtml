@page
@using RecipeModels
@model FinalProjectRecipe.Pages.Users.UserRegistModel
@{
    ViewData["Title"] = "Regist User page";
}



<form method="post" class="formUserRegist">
    <div class="form-group">
        <label asp-for="User.UserName">UserName:</label>
        <input asp-for="User.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email">Email:</label>
        <input asp-for="User.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Password">Password:</label>
        <input asp-for="User.Password" class="form-control" />
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["ErrorMessageEmail"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessageEmail"]
        </div>
    }
    @if (TempData["ErrorMessageUsername"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessageUsername"]
        </div>
    }
    <button type="submit" class="btn btn-primary">Register</button>
</form>


