@page
@using RecipeModels
@model FinalProjectRecipe.Pages.Difficulties.InsertDifficultyModel
@{
    ViewData["Title"] = "Insert New Difficulty";
}

<h1>Insert New Difficulty</h1>

<form method="post" class="formInsertRecipe">
    <div class="form-group">
        <label asp-for="Difficulty.Name"> Name:</label>
        <input asp-for="Difficulty.Name" class="form-control" />
    </div>
    @if (TempData["ErrorMessageNullOrEmpty"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessageNullOrEmpty"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <button type="submit" class="btn btn-primary">Insert Difficulty</button>
</form>
