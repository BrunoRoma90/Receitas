@page
@using RecipeModels
@model FinalProjectRecipe.Pages.Ingredients.InsertIngredientModel
@{
    ViewData["Title"] = "Insert New Ingredient";
}
<h1>Insert New Ingredient</h1>

<form method="post" class="formInsertRecipe">
    <div class="form-group">
        <label asp-for="Ingredient.Name"> Name:</label>
        <input asp-for="Ingredient.Name" class="form-control" />
    </div>
    @if (TempData["ErrorMessageNullOrEmpty"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessageNullOrEmpty"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    <button type="submit" class="btn btn-primary">Insert Ingredient</button>
</form>
